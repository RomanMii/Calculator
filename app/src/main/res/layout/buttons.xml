<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="fill_horizontal"
                                       app:rowCount="5"
                                       app:columnCount="4" android:id="@+id/buttonsID"
>

        <Button
                android:id="@+id/buttonC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="C"
                android:textSize="40dp"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_buttonC" android:tag="C"/>

        <Button
                android:id="@+id/buttonBackSpace"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="←"
                android:textSize="40dp"
                app:layout_columnSpan="2"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_buttonBackSpace" android:tag="backspace"/>

        <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="7"
                android:textSize="25sp"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button7" android:tag="7"/>

        <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="8"
                android:textSize="25sp"
                app:layout_row="1"
                app:layout_column="1"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button8" android:tag="8"/>

        <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="9"
                android:textSize="25sp"
                app:layout_row="1"
                app:layout_column="2"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button9" android:tag="9"/>

        <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="4"
                android:textSize="25sp"
                app:layout_row="2"
                app:layout_column="0"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button4" android:tag="4"/>

        <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="5"
                android:textSize="25sp"
                app:layout_row="2"
                app:layout_column="1"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button5" android:tag="5"/>
        v
        <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="6"
                android:textSize="25sp"
                app:layout_row="2"
                app:layout_column="2"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button6" android:tag="6"/>

        <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="1"
                android:textSize="25sp"
                app:layout_row="3"
                app:layout_column="0"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button1" android:tag="1"/>

        <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="2"
                android:textSize="25sp"
                app:layout_row="3"
                app:layout_column="1"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button2" android:tag="2"/>

        <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="3"
                android:textSize="25sp"
                app:layout_row="3"
                app:layout_column="2"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button3" android:tag="3"/>

        <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="0"
                android:textSize="25sp"
                app:layout_row="4"
                app:layout_column="0"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_button0" android:tag="0"/>

        <Button
                android:id="@+id/buttonDot"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="."
                android:textSize="25sp"
                app:layout_row="4"
                app:layout_column="1"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_buttonDot" android:tag="dot"/>

        <Button
                android:id="@+id/buttonEqual"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="="
                android:textSize="25sp"
                app:layout_row="4"
                app:layout_column="2"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_buttonEqual" android:tag="equal"/>

        <ViewFlipper
                android:id="@+id/viewFlipper"
                app:layout_rowSpan="4"
                app:layout_column="3"
                app:layout_row="0"
                app:layout_gravity="fill_horizontal">

                <include android:id="@+id/sideButtonsInclude"
                         layout="@layout/side_buttons"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"/>
                <include android:id="@+id/additionalButtonsInclude"
                         layout="@layout/additional_buttons"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"/>
        </ViewFlipper>


        <Button
                android:id="@+id/buttonMore"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="..."
                android:textSize="30sp"
                app:layout_row="4"
                app:layout_column="3"
                app:layout_gravity="fill_horizontal"
                android:onClick="onClick_buttonMore" android:tag="more"/>

</androidx.gridlayout.widget.GridLayout>